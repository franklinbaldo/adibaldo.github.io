---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE } from '../consts';

type Props = CollectionEntry<'blog'>['data'] & { 
	slug?: string;
	prev?: CollectionEntry<'blog'>;
	next?: CollectionEntry<'blog'>;
	wordCount?: number;
};

const { title, description, pubDate, updatedDate, heroImage, tags, place, placeLabel, slug, prev, next, wordCount } = Astro.props;
const pageTitle = `${title} — ${SITE_TITLE}`;
const imageUrl = slug ? `/og/${slug}.png` : undefined;

const readingTime = wordCount ? Math.max(1, Math.round(wordCount / 200)) : undefined;

const shareUrl = Astro.url.toString();
const shareText = `Olha que prosa boa do seu Adi: "${title}"`;
const waUrl = `https://wa.me/?text=${encodeURIComponent(shareText + ' ' + shareUrl)}`;
const tgUrl = `https://t.me/share/url?url=${encodeURIComponent(shareUrl)}&text=${encodeURIComponent(shareText)}`;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImageAbsolute = imageUrl ? new URL(imageUrl, canonicalURL).toString() : new URL('/og-home.png', canonicalURL).toString();

const blogPostingLD = {
	"@context": "https://schema.org",
	"@type": "BlogPosting",
	"headline": title,
	"description": description,
	"image": ogImageAbsolute,
	"datePublished": pubDate?.toISOString(),
	...(updatedDate && { "dateModified": updatedDate.toISOString() }),
	"author": {
		"@type": "Person",
		"name": "Adi Baldo",
		"url": new URL('/sobre', Astro.site).toString()
	},
	"publisher": {
		"@type": "Person",
		"name": "Adi Baldo"
	},
	"mainEntityOfPage": {
		"@type": "WebPage",
		"@id": canonicalURL.toString()
	},
	"inLanguage": "pt-BR",
	...(tags && tags.length > 0 && { "keywords": tags.join(", ") }),
	...(wordCount && { "wordCount": wordCount })
};

const breadcrumbLD = {
	"@context": "https://schema.org",
	"@type": "BreadcrumbList",
	"itemListElement": [
		{
			"@type": "ListItem",
			"position": 1,
			"name": "Início",
			"item": Astro.site?.toString()
		},
		{
			"@type": "ListItem",
			"position": 2,
			"name": "Textos",
			"item": new URL('/blog', Astro.site).toString()
		},
		{
			"@type": "ListItem",
			"position": 3,
			"name": title
		}
	]
};
---

<html lang="pt-BR">
	<head>
		<BaseHead title={pageTitle} description={description} imageUrl={imageUrl} />
		<script type="application/ld+json" set:html={JSON.stringify(blogPostingLD)} />
		<script type="application/ld+json" set:html={JSON.stringify(breadcrumbLD)} />
	</head>
	<body>
		<Header />

		<main class="post">
			<div class="reading-width">
				<header class="post-header">
					<p class="post-meta">
						<span><FormattedDate date={pubDate} /></span>
						{(placeLabel || place) && <span>•</span>}
						{(placeLabel || place) && <span>{placeLabel || place}</span>}
						{tags && tags.length > 0 && <span>•</span>}
						{tags && tags.length > 0 && <span>{tags[0]}</span>}
						{readingTime && <span>•</span>}
						{readingTime && <span>{readingTime} min de prosa</span>}
					</p>
					<h1 class="post-title">{title}</h1>
					{updatedDate && (
						<p class="meta">
							Atualizado em <FormattedDate date={updatedDate} />
						</p>
					)}
				</header>

				{heroImage && (
					<div style={`margin-bottom: var(--space-xl);`}>
						<Image width={1020} height={510} src={heroImage} alt={`Imagem de capa: ${title}`} />
					</div>
				)}

				<article class="prose">
					<slot />
				</article>

				<section class="share-section" style="margin-top: var(--space-2xl);">
					<p class="meta" style="margin-bottom: var(--space-sm);">Compartilhe essa prosa:</p>
					<div style="display: flex; gap: var(--space-md);">
						<a class="icon-btn" href={waUrl} target="_blank" rel="noreferrer" style="background: #25D366; color: white; border:none; text-decoration:none;">
							<svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 1 1-7.6-11.7 8.38 8.38 0 0 1 3.8.9L21 3z"></path></svg>
							WhatsApp
						</a>
						<a class="icon-btn" href={tgUrl} target="_blank" rel="noreferrer" style="background: #0088cc; color: white; border:none; text-decoration:none;">
							<svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="22" y1="2" x2="11" y2="13"></line><polygon points="22 2 15 22 11 13 2 9 22 2"></polygon></svg>
							Telegram
						</a>
					</div>
				</section>

				<nav class="pagination-nav" style="margin-top: var(--space-3xl); border-top: 1px solid var(--border-light); padding-top: var(--space-xl);">
					<div style="display: grid; grid-template-columns: 1fr 1fr; gap: var(--space-lg);">
						{prev ? (
							<a href={`/blog/${prev.id}/`} class="card" style="text-align: left;">
								<span class="meta">Anterior</span>
								<h4 class="card-title" style="font-size: 16px;">{prev.data.title}</h4>
							</a>
						) : <div />}
						{next ? (
							<a href={`/blog/${next.id}/`} class="card" style="text-align: right;">
								<span class="meta">Próxima</span>
								<h4 class="card-title" style="font-size: 16px;">{next.data.title}</h4>
							</a>
						) : <div />}
					</div>
				</nav>

				<hr style="margin: var(--space-3xl) 0;" />

				<section class="comments">
					<script
						src="https://giscus.app/client.js"
						data-repo="adibaldo/adibaldo.github.io"
						data-repo-id="R_kgDORK6bRw"
						data-category="Announcements"
						data-category-id="DIC_kwDORK6bR84C2B5w"
						data-mapping="pathname"
						data-strict="0"
						data-reactions-enabled="1"
						data-emit-metadata="0"
						data-input-position="bottom"
						data-theme="https://adibaldo.github.io/giscus-custom.css"
						data-lang="pt"
						crossorigin="anonymous"
						async>
					</script>
				</section>
			</div>
		</main>

		<Footer />

		<script>
			function updateGiscusTheme() {
				const isDark = document.documentElement.dataset.theme === 'dark';
				const theme = isDark 
					? 'https://adibaldo.github.io/giscus-custom.css' 
					: 'https://adibaldo.github.io/giscus-custom.css';
				
				const iframe = document.querySelector<HTMLIFrameElement>('iframe.giscus-frame');
				if (!iframe) return;
				iframe.contentWindow?.postMessage(
					{ giscus: { setConfig: { theme } } },
					'https://giscus.app'
				);
			}

			const observer = new MutationObserver((mutations) => {
				mutations.forEach((mutation) => {
					if (mutation.attributeName === 'data-theme') {
						updateGiscusTheme();
					}
				});
			});

			observer.observe(document.documentElement, { attributes: true });
		</script>
	</body>
</html>
